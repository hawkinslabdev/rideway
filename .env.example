# Database configuration
DATABASE_URL="file:./moto_maintain.db"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-your-secure-string"

# Default application settings
DEFAULT_UNITS="metric"  # can be "metric" or "imperial"
DEFAULT_LANGUAGE="en"   # default language code
DEFAULT_THEME="light"   # can be "light", "dark", or "system"
DEFAULT_EMAIL_NOTIFICATIONS="true"  # enable/disable email notifications by default
DEFAULT_MAINTENANCE_REMINDERS="true"  # enable/disable maintenance reminders by default

# Security
ENCRYPTION_KEY="replace-with-your-32-character-key"  # Exactly 32 chars for AES-256-CBC